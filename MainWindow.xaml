<Window x:Class="Wpf_DelegatesVerstehen_2024_02_22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_DelegatesVerstehen_2024_02_22"
        mc:Ignorable="d"
        Title="Delegates verstehen" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="TxtInput" Grid.Row="0" Grid.Column="0" ></TextBox>
        <WrapPanel x:Name="Wp" Grid.Row="1" Grid.Column="0" >
            <Button x:Name="BtnEvenNumbers" Content="Gerade Zahl" Click="BtnEvenNumbers_OnClick" />
            <Button x:Name="Btn13To77" Content="Zahlen zwischen 13 und 77" Click="BtnBetween13And77_OnClick" />
            <Button x:Name="BtnGreaterThan10" Content="Zahlen größer als 10" Click="BtnGreaterThan10_OnClick" />
        </WrapPanel>
        <TextBox x:Name="TxtOutput" Grid.Row="2" Grid.Column="0" ></TextBox>
        
        
        
    </Grid>
</Window>
